<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.touhouqing.grabteacherbackend.mapper.TeacherSubjectMapper">
    <select id="findByTeacherIds" resultType="com.touhouqing.grabteacherbackend.entity.TeacherSubject">
        SELECT teacher_id, subject_id FROM teacher_subjects
        WHERE teacher_id IN
        <foreach collection="teacherIds" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </select>
</mapper>

