<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.touhouqing.grabteacherbackend.mapper.CourseMapper">
    <select id="findActiveByTeacherIds" resultType="com.touhouqing.grabteacherbackend.model.entity.Course">
        SELECT * FROM courses
        WHERE is_deleted = 0
          AND status = 'active'
          AND teacher_id IN
        <foreach collection="teacherIds" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
        ORDER BY created_at DESC
    </select>
</mapper>

